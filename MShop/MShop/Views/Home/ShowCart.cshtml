@model CartViewModel
@{
    ViewData["Title"] = "سبد خرید";
}

<table class="table table-striped text-right ">
    <thead class="thead-dark">
        <tr>
            <th>کالا</th>
            <th>تعداد</th>
            <th>قیمت</th>
            <th></th>
        </tr>
       
    </thead>
    <tbody>
        @foreach(var item in Model.CartItems)
            {
                <tr>
                    <td>@item.Item.Prodact.Name</td>
                    <td>@item.Quantity</td>
                    <td>@item.GetTotalPrice()</td>
                    <td>
                        <a asp-action="RemoveCart" asp-route-itemId="@item.Item.Id">حذف</a>
                    </td>
                </tr>
            }
    </tbody>
</table>
<h5 class="text-right">جمع کل: @Model.OrderTotal</h5>


